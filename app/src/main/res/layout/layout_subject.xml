<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_subject"
        style="@style/title_left_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subject_msg" />

    <TextView
        android:id="@+id/tv_deduct"
        style="@style/title_left_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="@string/deduct_remarks" />


    <TextView
        android:id="@+id/tv_address"
        style="@style/content_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subject" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:padding="10dp"
        android:textColor="@color/txt_sub"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_address"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:textColor="@color/red_btn_bg"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
